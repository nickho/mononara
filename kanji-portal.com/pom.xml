                    </exclusion>
                </exclusions>
            </dependency>
            <dependency>
                <groupId>org.jboss.resteasy</groupId>
                <artifactId>jaxrs-api</artifactId>
                <version>1.0-RC1</version>
                <exclusions>
                    <exclusion>
                        <groupId>javax.servlet</groupId>
